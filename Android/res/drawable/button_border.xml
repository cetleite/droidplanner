<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
    <shape
           android:shape="rectangle">
        <gradient android:startColor="#3bb6e3"
                  android:endColor="#3bb6e3"
                  android:angle="270" />
        <corners android:radius="3dp" />
        <stroke android:width="5px" android:color="#71000000" />
    </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <gradient android:startColor="#80078caa"
                      android:endColor="#80078caa"
                      android:angle="270" />
            <corners android:radius="3dp" />
            <stroke android:width="5px" android:color="#71000000" />
        </shape>
    </item>
</selector>